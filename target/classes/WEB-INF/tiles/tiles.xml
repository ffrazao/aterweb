<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<definition name="base" template="/WEB-INF/tiles/_modelo/_base.jsp">
		<put-attribute name="cabecalho"
			value="/WEB-INF/tiles/_modelo/cabecalho.jsp" />
		<put-attribute name="menu" value="/WEB-INF/tiles/_modelo/menu.jsp" />
		<put-attribute name="rodape" value="/WEB-INF/tiles/_modelo/rodape.jsp" />
		<put-attribute name="barra-ferramenta"
			value="/WEB-INF/tiles/_modelo/barra-ferramenta.jsp" cascade="true" />
	</definition>

	<definition name="*-cad/*" extends="base">
		<put-attribute name="titulo" value="{2}" cascade="true" />
		<put-attribute name="corpo"
			value="/WEB-INF/tiles/_modelo/_cadastro.jsp" />
		<put-attribute name="filtro" value="/WEB-INF/tiles/{1}-cad/filtro.jsp"
			cascade="true" />
		<put-attribute name="listagem"
			value="/WEB-INF/tiles/{1}-cad/listagem.jsp" cascade="true" />
		<put-attribute name="formulario"
			value="/WEB-INF/tiles/{1}-cad/formulario.jsp" cascade="true" />
		<put-attribute name="script" value="/resources/js/{1}-cad.js"
			cascade="true" />
	</definition>

	<definition name="*-pop/*" template="/WEB-INF/tiles/_modelo/_base-pop.jsp">
		<put-attribute name="titulo" value="{2}" />
		<put-attribute name="corpo"
			value="/WEB-INF/tiles/{1}/formulario.jsp" />
		<put-attribute name="script" value="/resources/js/{1}.js" />
	</definition>

	<definition name="*/*" extends="base">
		<put-attribute name="titulo" value="{2}" />
		<put-attribute name="corpo" value="/WEB-INF/tiles/{1}/corpo.jsp" />
	</definition>

	<definition name="*" template="/WEB-INF/tiles/_modelo/_generico.jsp">
		<put-attribute name="corpo" value="/WEB-INF/tiles/{1}/corpo.jsp" />
	</definition>

</tiles-definitions>