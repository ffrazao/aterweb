<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/security 
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<http auto-config="false" use-expressions="true"
		access-denied-page="/acessoNegado" create-session="ifRequired"
		entry-point-ref="loginUrlAuthenticationEntryPoint">

		<logout logout-url="/logout" logout-success-url="/"
			invalidate-session="true" />

		<intercept-url pattern="/" access="permitAll" />
		<intercept-url pattern="/resources/**" access="permitAll" />
		<intercept-url pattern="/login" access="permitAll" />
		<intercept-url pattern="/logout" access="permitAll" />
		<intercept-url pattern="/mudarSenhaAtual" access="permitAll" />
		<intercept-url pattern="/usuario-cad**"
			access="fullyAuthenticated and hasRole('ROLE_ADMIN')" />
		<intercept-url pattern="/modulo-cad**"
			access="fullyAuthenticated and hasRole('ROLE_ADMIN')" />
		<intercept-url pattern="/**" access="fullyAuthenticated" />

		<!-- Necessario para habilitar a captação do campo administrador da tela 
			de login -->
		<custom-filter ref="customUsernamePasswordAuthenticationFilter"
			position="FORM_LOGIN_FILTER" />


		<!-- <csrf /> // TODO configurar ataque CSRF -->
		<!-- <remember-me key="aterWebKey" /> // TODO Habilitar a opção remember-me -->
	</http>

	<!-- Necessario para habilitar a captação do campo administrador da tela 
		de login -->
	<beans:bean id="loginUrlAuthenticationEntryPoint"
		class="org.springframework.security.web.authentication.LoginUrlAuthenticationEntryPoint">
		<beans:constructor-arg name="loginFormUrl"
			value="/login" />
	</beans:bean>

	<!-- Necessario para habilitar a captação do campo administrador da tela 
		de login -->
	<beans:bean id="successHandler"
		class="org.springframework.security.web.authentication.SavedRequestAwareAuthenticationSuccessHandler">
		<beans:property name="defaultTargetUrl" value="/" />
	</beans:bean>

	<!-- Necessario para habilitar a captação do campo administrador da tela 
		de login -->
	<beans:bean id="failureHandler"
		class="org.springframework.security.web.authentication.SimpleUrlAuthenticationFailureHandler">
		<beans:property name="defaultFailureUrl" value="/login?login_error=true" />
	</beans:bean>

	<!-- Necessario para habilitar a captação do campo administrador da tela 
		de login -->
	<beans:bean id="customUsernamePasswordAuthenticationFilter"
		class="gov.emater.aterweb.security.CustomUsernamePasswordAuthenticationFilter">
		<beans:property name="authenticationManager" ref="authenticationManager" />
		<beans:property name="authenticationSuccessHandler"
			ref="successHandler" />
		<beans:property name="authenticationFailureHandler"
			ref="failureHandler" />
	</beans:bean>

	<!-- Customização da autenticação do usuário -->
	<beans:bean id="customAuthenticationProvider"
		class="gov.emater.aterweb.security.CustomAuthenticationProvider" />
	<authentication-manager alias="authenticationManager">
		<authentication-provider ref="customAuthenticationProvider" />
	</authentication-manager>

	<!-- evaluating security expressions -->
	<beans:bean
		class="org.springframework.security.web.access.expression.DefaultWebSecurityExpressionHandler" />

</beans:beans>